{
	"name": "Ziglang devcontainer",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"ZIG_VERSION": "${templateOption:zigVersion}",
			"MINISIGN_VERSION": "0.11"
		}
	},
	"capAdd": [
		"SYS_PTRACE"
	],
	"securityOpt": [
		"seccomp=unconfined"
	],
	"features": {},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ziglang.vscode-zig",
				"ianic.zig-language-extras",
				"lorenzopirro.zig-snippets",
				"vadimcn.vscode-lldb"
			]
		}
	},
	"remoteUser": "vscode"
}